{
  "name": "playwright-codegen-ruby",
  "version": "0.1.0",
  "description": "Ruby code generator for Playwright",
  "main": "src/index.tsx",
  "type": "module",
  "bin": {
    "playwright-codegen-ruby": "./src/cli.tsx"
  },
  "scripts": {
    "start": "tsx src/cli.tsx",
    "dev": "tsx watch src/cli.tsx",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "playwright",
    "ruby",
    "codegen",
    "test",
    "automation"
  ],
  "author": "YusukeIwaki",
  "license": "MIT",
  "dependencies": {
    "ink": "^5.0.1",
    "playwright-core": ">=1.54.2",
    "react": "^18.3.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.3",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
