{
  "name": "playwright-codegen-ruby",
  "version": "0.1.0",
  "description": "Ruby code generator for Playwright",
  "main": "src/cli.tsx",
  "type": "module",
  "bin": {
    "playwright-codegen-ruby": "./bin/cli.js"
  },
  "files": [
    "bin/",
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.js",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "start": "tsx src/cli.tsx",
    "dev": "tsx watch src/cli.tsx",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run typecheck && npm run test",
    "prepack": "npm run build"
  },
  "keywords": [
    "playwright",
    "ruby",
    "codegen",
    "test",
    "automation",
    "browser",
    "e2e",
    "testing",
    "code-generation",
    "playwright-ruby"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YusukeIwaki/playwright-codegen-ruby.git"
  },
  "bugs": {
    "url": "https://github.com/YusukeIwaki/playwright-codegen-ruby/issues"
  },
  "homepage": "https://github.com/YusukeIwaki/playwright-codegen-ruby#readme",
  "author": "YusukeIwaki",
  "license": "MIT",
  "dependencies": {
    "ink": "^5.0.1",
    "playwright": ">= 1.55.0-alpha-2025-08-11",
    "react": "^18.3.1",
    "yargs": "^17.7.2",
    "tsx": "^4.19.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.3",
    "@types/yargs": "^17.0.33",
    "typescript": "^5.5.0",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
